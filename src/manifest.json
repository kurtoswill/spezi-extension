{
  "manifest_version": 3,
  "name": "Spezi",
  "version": "1.0",
  "description": "Real-time feedback for OFWs and non-fluent speakers",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "microphone"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
